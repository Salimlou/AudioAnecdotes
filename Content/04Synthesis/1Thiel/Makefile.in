CC = @CC@
CFLAGS = @CFLAGS@ -I.
LDFLAGS = @LDFLAGS@
LIBS = -lpablio @LIBS@ 


TESTS = \
	RockGuitar \
	pa_multiwave \
	FilteredNoise3

all: tests

tests: $(TESTS)

$(TESTS):%: Makefile %.c
	$(CC) -o $@ $(CFLAGS) $*.c $(LDFLAGS) $(LIBS)

clean:
	echo No intermediate files here 

distclean: clean
	$(RM) -f $(TESTS)

%.o: %.c Makefile $(PAINC)
	$(CC) -c $(CFLAGS) $< -o $@
