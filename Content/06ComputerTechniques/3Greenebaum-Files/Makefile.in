CC = @CC@
CFLAGS = @CFLAGS@ -I.
LDFLAGS = @LDFLAGS@
LIBS = -lflavor -lpablio @LIBS@ 
LOCALCLEAN = 
EXEEXT=@EXEEXT@
OBJEXT=@OBJEXT@
TOOLROOT=@TOOLROOT@
LOCALOPT=@LOCALOPT@
LOCALLINK=@LOCALLINK@

# Parameters

CXX      = c++
CPPFLAGS = @DEFS@ 

# Dependencies

all: play

play: audio.h play.o audio.o
	$(CXX) -o $@ $(LDFLAGS) play.o audio.o $(LIBS)

audio.h audio.cpp play.cpp: FL/audio.fl
	flavorc -p -a 256 FL/audio.fl

clean:
	rm -f audio.h *.o play play.exe

.SUFFIXES: .o .c .cpp .h

.cpp.o:
	$(CXX) -c -o $@ $(CFLAGS) $(CPPFLAGS) $<

